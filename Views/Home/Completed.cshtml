@{
    ViewData["Title"] = "Delete";

}
@model TaskResponse
<h2> Confirm Completion</h2>
<br />
<h3>Are you sure you want to complete the record for the task @Model.Task?</h3>
<br />

<form method="post" asp-action="Completed">
    <button type="submit">Complete</button>
    <a asp-controller="Home" asp-action="ViewTask" class="btn btn-primary">Cancel</a>
    <input type="hidden" asp-for="TaskId" />
</form>
