@{
    ViewData["Title"] = "Task Form";
}
@model Mission8.Models.TaskResponse

<h1>Task Form</h1>
<div>
    <form method="post">

        <div asp-validation-summary="All"></div>

        <label asp-for="Task"> Task:</label>
        <input asp-for="Task" /><br />

        <label asp-for="DueDate">Due Date:</label>
        <input asp-for="DueDate" /><br />

        <label asp-for="Quadrant">Quadrant:</label>
        <label asp-for="Quadrant">Rating:</label>
        <select asp-for="Quadrant">
            <option value="1">Important/Urgent</option>
            <option value="2">Important/Not Urgent</option>
            <option value="3">Not Important/Urgent</option>
            <option value="4">Not Important/Not Urgent</option>
        </select><br />


        @*//Says object reference not set to an instance of an object for viewbag line*@ 
        <label asp-for="CategoryId">Task Category:</label>
        <select asp-for="CategoryId">
            <option value="">Select a Category:</option>
            @foreach (Category c in ViewBag.Categories)
            {
            <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select><br />

        <label asp-for="Completed">Completed:</label>
        <select asp-for="Completed">
            <option>Select an Option:</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <button type="submit">Submit Task</button>

    </form>
</div>
