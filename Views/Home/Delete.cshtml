@{
    ViewData["Title"] = "Delete";
}
@model TaskResponse
<h2> Confirm Deletion</h2>
<br />
<h3>Are you sure you want to delete the record for the task @Model.Task?</h3>
<br />
<form method="post" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="ViewTask" class="btn btn-primary">Cancel</a>
    <input type="hidden" asp-for="TaskId" />
</form>
